        "filters": [
          {
            "all_of": [
              {
                "test": "is_persistent",
                "value": false
              },
              {
                "operator": ">=",
                "test": "light_level",
                "value": 8
              },
              {
                "test": "is_daytime",
                "value": true
              },
              {
                "subject": "self",
                "test": "inactivity_timer",
                "value": 600
              },
              {
                "test": "random_chance",
                "value": 50
              },
              {
                "operator": ">",
                "test": "distance_to_nearest_player",
                "value": 54
              },
              {
                "test": "surface_mob",
                "value": true
              }
            ]
          }
        ]
      },
      "minecraft:environment_sensor": {
        "triggers": {
          "event": "minecraft:melee_mode",
          "filters": {
            "operator": "==",
            "test": "is_underwater",
            "subject": "self",
            "value": true
          }
        }
      },
      "minecraft:equipment": {
        "table": "loot_tables/entities/skeleton_gear.json"
      },
      "minecraft:experience_reward": {
