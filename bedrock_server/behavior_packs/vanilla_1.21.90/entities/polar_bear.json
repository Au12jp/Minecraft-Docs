            "event": "minecraft:baby_on_calm",
            "target": "self"
          },
          "duration": 1
        }
      },
      "minecraft:baby_wild": {
        "minecraft:behavior.nearest_attackable_target": {
          "entity_types": [
            {
              "filters": {
                "AND": [
                  {
                    "test": "is_family",
                    "subject": 1,
                    "operator": 0,
                    "value": "player"
                  }
                ]
              }
            }
          ],
          "priority": 4
        },
        "minecraft:on_target_acquired": {
          "event": "minecraft:on_scared",
          "target": "self"
        }
      }
    },
    "events": {
      "minecraft:on_calm": {
        "add": {
          "component_groups": [
            "minecraft:adult_wild"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:adult_hostile"
          ]
        }
      },
      "minecraft:ageable_grow_up": {
        "add": {
          "component_groups": [
            "minecraft:adult",
            "minecraft:adult_wild"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:baby",
            "minecraft:baby_wild",
            "minecraft:baby_scared"
          ]
        }
      },
      "minecraft:on_scared": {
        "add": {
          "component_groups": [
            "minecraft:baby_scared"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:baby_wild"
          ]
        }
      },
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "add": {
              "component_groups": [
                "minecraft:adult",
                "minecraft:adult_wild"
              ]
            },
            "weight": 9
          },
          {
            "add": {
              "component_groups": [
                "minecraft:baby",
                "minecraft:baby_wild"
              ]
            },
            "weight": 1
          }
        ]
      },
      "minecraft:baby_on_calm": {
        "add": {
          "component_groups": [
            "minecraft:baby_wild"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:baby_scared"
          ]
        }
      },
      "minecraft:entity_born": {
        "add": {
          "component_groups": [
            "minecraft:baby",
            "minecraft:baby_wild"
          ]
        }
      },
      "minecraft:on_anger": {
        "add": {
          "component_groups": [
            "minecraft:adult_hostile"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:adult_wild"
          ]
        }
      }
    }
