          "priority": 1
        }
      },
      "minecraft:adult_wild": {
        "minecraft:behavior.nearest_attackable_target": {
          "entity_types": [
            {
              "filters": {
                "AND": [
                  {
                    "test": "is_family",
                    "subject": 1,
                    "operator": 0,
                    "value": "fox"
                  }
                ]
              }
            }
          ],
          "priority": 4
        },
        "minecraft:on_friendly_anger": {
          "event": "minecraft:on_anger",
